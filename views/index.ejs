<% include header %>
<% include nav %>

<div class="container">
    <div class="btn-group">
      <a href="/" class="btn btn-danger active">新建投票项目</a>
      <a href="/list" class="btn btn-danger">投票项目列表</a>
    </div>
    
    <div class="row" style="margin-top: 20px;">
        <div class="col-md-8">
            <form action="/insert" method="post" class="form-horizontal" role="form">
              <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">项目名称</label>
                <div class="col-sm-10">
                  <input type="text" name="projName" class="form-control" id="" placeholder="">
                </div>
              </div>
              <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">项目说明</label>
                <div class="col-sm-10">
                  <textarea name="projDesc" class="form-control" rows="3"></textarea>
                </div>
              </div>
              <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">可选项</label>
                <div class="col-sm-4" style="padding-right: 0">
                  <input id="newItemTxt" type="text" class="form-control" placeholder="请输入新增选项">
                </div>
                <div class="col-sm-1" style="padding-left: 5px">
                  <button id="addItemBtn" type="button" class="btn btn-default">增加>></button>
                </div>
                <div class="col-sm-5">
                  <select name="" id="itemSel" class="form-control" multiple>
                    <option>请双击删除选项</option>  
                  </select>
                </div>
                <input type="hidden" name="projItems" />
              </div>
              <div class="form-group">
                <label for="expDate" class="col-sm-2 control-label">过期时间</label>
                <div class="col-sm-10">
                    <!--data-date-format="yyyy MM dd - HH:ii"-->
                    <div id="datePicker" class="input-group date form_time col-md-5" data-date="" data-date-format="yyyy-mm-dd" data-link-field="expDate" data-link-format="yyyy-mm-dd">
                        <input class="form-control" size="16" type="text" value="" readonly>
                        <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                        <span class="input-group-addon"><span class="glyphicon glyphicon-time"></span></span>
                    </div>
                    <input type="hidden" name="expDate" id="expDate" value="" />
                </div>
              </div>
              <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">投票类型</label>
                <div class="col-sm-10">
                    <label class="radio-inline">
                      <input type="radio" name="vtype" checked id="" value="0"> 单选
                    </label>
                    <label class="radio-inline">
                      <input type="radio" name="vtype" id="" value="1"> 多选
                    </label>
                </div>
              </div>
              <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">限制IP</label>
                <div class="col-sm-10">
                    <label class="radio-inline">
                        <input type="radio" name="ip" checked id="" value="0"> 不限制
                    </label>
                    <label class="radio-inline">
                        <input type="radio" name="ip" id="" value="1"> 限制（一个ip只能产生一次有效投票）
                    </label>
                </div>
              </div>
              <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">发起人</label>
                <div class="col-sm-3">
                  <input name="sponsor" type="text" class="form-control" id="" placeholder="">
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                  <button type="submit" class="btn btn-danger">确定并保存</button>
                  <button type="reset" class="btn btn-default">重置</button>
                </div>
              </div>
            </form>
        </div>
    </div>
</div>

<% include footer %>